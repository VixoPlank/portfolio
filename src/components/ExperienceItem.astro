---
interface Props {
	title: string
	description: string
	date: string
	img: string
}

const { title, description, date, img } = Astro.props
---

<article>
	<div class='flex w-full items-center justify-between pt-8 max-md:flex-col lg:items-center'>
		<div class='flex items-center space-x-4'>
			<figure class='size-12 lg:size-10'>
				<img class='w-full py-[6px]' src={img} alt={`logo de la empresa ${img}`} loading='lazy' />
			</figure>
			<h2 class='font-bold text-gray-50 lg:text-lg'>{title}</h2>
		</div>
		<div class='flex items-end max-md:mt-3 max-md:w-full max-md:flex-col'>
			<time class='text-gray-400'>{date}</time>
		</div>
	</div>
	<p class='w-full pt-5 text-gray-400'>
		{description}
	</p>
</article>
